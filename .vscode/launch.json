    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'icomb'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=icomb",
                    "--package=icomb"
                ],
                "filter": {
                    "name": "icomb",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_BACKTRACE": "1",
                "RUST_LOG": "debug"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'icomb'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=icomb",
                    "--package=icomb"
                ],
                "filter": {
                    "name": "icomb",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",

        }
    ]
}